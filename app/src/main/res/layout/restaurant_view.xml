<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D131212">

    <ImageView
        android:id="@+id/restaurant_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/restaurant_icon"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_issues_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_icon"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/restaurant_icon"
        android:text="@string/issues_found"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_hazard_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_issues_found"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/text_issues_found"
        android:text="@string/hazard_level" />

    <ImageView
        android:id="@+id/hazard_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_issues_found"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/text_hazard_level"
        android:adjustViewBounds="true"
        android:contentDescription="@string/restaurant_icon"
        android:maxWidth="20dp"
        android:maxHeight="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_inspection_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_issues_found"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:gravity="end"
        android:maxLines="1"
        android:text="@string/inspection_date"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/RestaurantDetails_text_restaurant_name"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/restaurant_icon"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:text="@string/restaurant_name"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
